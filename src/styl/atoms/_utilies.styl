//
// 1. Screen Reader Only 
// --------------------------------------------------

.sr-only
    position absolute 
    width 1px 
    height 1px 
    padding 0 
    margin -1px 
    overflow hidden 
    clip rect(0,0,0,0) 
    border 0  
  

//
// 2. Hidden
// --------------------------------------------------

.hidden
    $hidden(all)  
 